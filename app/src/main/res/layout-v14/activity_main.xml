<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/yokai"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchBar"
        android:editable="true"
        android:enabled="true"
        android:lines="1"
        android:minWidth="240dp"
        android:singleLine="true"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:hint="&lt;enter Yo-kai name here>"
        android:layout_marginTop="86dp"
        android:textSize="8pt"
        android:background="@null"
        android:autoText="true"
        android:linksClickable="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/space2"
        android:layout_toEndOf="@+id/space2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/btnSearch"
        android:layout_below="@+id/searchBar"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/searchBar"
        android:layout_alignStart="@+id/searchBar"
        android:layout_alignRight="@+id/searchBar"
        android:layout_alignEnd="@+id/searchBar"
        android:maxHeight="100px"
        android:background="@drawable/btnyokai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yo-Kai Name:"
        android:id="@+id/textView3"
        android:textSize="10pt"
        android:layout_above="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:id="@+id/txtName"
        android:textSize="10pt"
        android:minLines="2"
        android:maxLines="2"
        android:textColor="@android:color/holo_blue_light"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_toLeftOf="@+id/space"
        android:layout_toStartOf="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food List:"
        android:id="@+id/textView5"
        android:textSize="10pt"
        android:layout_below="@+id/txtName"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:id="@+id/txtList"
        android:textSize="10pt"
        android:minLines="4"
        android:maxLines="4"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_toLeftOf="@+id/space"
        android:layout_toStartOf="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Food:"
        android:id="@+id/textView4"
        android:textSize="10pt"
        android:layout_below="@+id/txtList"
        android:layout_alignLeft="@+id/txtList"
        android:layout_alignStart="@+id/txtList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:id="@+id/txtBest"
        android:singleLine="true"
        android:minLines="1"
        android:maxLines="1"
        android:textSize="10pt"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/txtList"
        android:layout_alignEnd="@+id/txtList" />

    <Space
        android:layout_width="40px"
        android:layout_height="500px"
        android:id="@+id/space"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="150px"
        android:layout_height="140px"
        android:layout_alignTop="@+id/searchBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space2" />

</RelativeLayout>
