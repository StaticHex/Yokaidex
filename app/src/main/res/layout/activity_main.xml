<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/yokai"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/btnSearch"
        android:background="@drawable/btnyokai"
        android:maxHeight="100px"
        android:layout_below="@+id/space3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/border"
        android:id="@+id/frameLayout"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/searchBar"
            android:editable="true"
            android:enabled="true"
            android:lines="1"
            android:minWidth="240dp"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="&lt;enter Yo-kai name here>"
            android:textSize="10pt"
            android:background="@null"
            android:autoText="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="10px" />
    </FrameLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:id="@+id/space3"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/btnSearch"
        android:layout_alignLeft="@+id/space3"
        android:layout_alignStart="@+id/space3"
        android:id="@+id/space4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/space4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class:   "
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="34px"
            android:id="@+id/imgClass"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:background="@drawable/unknown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Rank:   "
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgClass"
            android:layout_toEndOf="@+id/imgClass" />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:id="@+id/imgRank"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:background="@drawable/x" />

        <Space
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgRank"
            android:layout_toEndOf="@+id/imgRank"
            android:id="@+id/space5" />

        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:id="@+id/imgYokai"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/space5"
            android:layout_toEndOf="@+id/space5"
            android:background="@drawable/none" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_below="@+id/textView"
            android:layout_toLeftOf="@+id/imgYokai"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:id="@+id/space6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evolution:"
            android:id="@+id/textView6"
            android:layout_above="@+id/txtDesc"
            android:layout_alignLeft="@+id/txtDesc"
            android:layout_alignStart="@+id/txtDesc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDesc"
            android:text="---"
            android:textColor="#008cdd"
            android:maxLines="3"
            android:minLines="3"
            android:layout_alignBottom="@+id/imgYokai"
            android:layout_toLeftOf="@+id/space8"
            android:layout_alignLeft="@+id/space7"
            android:layout_alignStart="@+id/space7"
            android:textSize="5.5pt" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="20px"
            android:layout_below="@+id/txtDesc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/space7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes To Eat:"
            android:id="@+id/textView7"
            android:layout_below="@+id/space7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:id="@+id/txtFood"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:textColor="#008cdd"
            android:maxLines="4"
            android:minLines="4" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_toLeftOf="@+id/imgYokai"
            android:layout_toStartOf="@+id/imgYokai"
            android:layout_alignBottom="@+id/imgYokai"
            android:id="@+id/space8"
            android:layout_alignTop="@+id/space5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite:"
            android:id="@+id/textView8"
            android:layout_below="@+id/txtFood"
            android:layout_alignLeft="@+id/txtFood"
            android:layout_alignStart="@+id/txtFood" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:id="@+id/txtBest"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#008cdd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Element:"
            android:id="@+id/textView9"
            android:layout_below="@+id/space6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_alignRight="@+id/txtDesc"
            android:layout_alignEnd="@+id/txtDesc"
            android:textColor="#008cdd" />
    </RelativeLayout>

</RelativeLayout>
